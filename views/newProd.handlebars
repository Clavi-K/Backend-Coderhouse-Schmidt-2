{{> navbar }}

<form action="/newProd" enctype="multipart/form-data" method="POST">

    <hr>

    <h1>Venda su videojuego</h1>

    {{> error }}

    <div class="inputs">

        <input type="text" name="name" id="name" class="nameInput" placeholder="Ingrese el nombre">
        <input type="number" name="price" id="price" class="ageInput" placeholder="Ingrese el precio">

        <div class="form-check">
            <input style="margin: 0%;" class="form-check-input" type="checkbox" name="platforms" value="PC" />
            <label class="form-check-label" for="flexCheckDefault">PC</label>
        </div>

        <div class="form-check">
            <input style="margin: 0%;" class="form-check-input" type="checkbox" name="platforms" value="XBOX" />
            <label class="form-check-label" for="flexCheckChecked">XBOX</label>
        </div>

        <div class="form-check">
            <input style="margin: 0%;" class="form-check-input" type="checkbox" name="platforms" value="PS5" />
            <label class="form-check-label" for="flexCheckChecked">PS5</label>
        </div>

        <label for="img" style="font-weight: bold;">Seleccionar imagen</label>
        <input type="file" name="image" id="imageInput" accept=".jpg,.png,.jpeg">

        <hr>

    </div>

    <button type="submit" class="btn btn-primary submit">Vender</button>

</form>