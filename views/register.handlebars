<link rel="stylesheet" href="/static/css/login.css">
<link rel="stylesheet" href="/static/css/register.css">

<form action="/register" enctype="multipart/form-data" method="POST">

    <hr>

    <h1>Register</h1>

    {{> error }}

    <div class="input">
        <label for="email">Email: </label>
        <input type="email" name="email" id="email" class="emailInput">
    </div>
    <div class="input">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" class="nameInput">
    </div>
    <div class="input">
        <label for="surname">Surname: </label>
        <input type="text" name="surname" id="surname" class="surnameInput">
    </div>
    <div class="input">
        <label for="address">Address: </label>
        <input type="text" name="address" id="address" class="addressInput">
    </div>
    <div class="input">
        <label for="password">Password: </label>
        <input type="password" name="password" id="password" class="passwordInput">
    </div>

    <div class="input">
        <label for="password2">Repeat your password: </label>
        <input type="password" name="password2" id="password2" class="passwordInput">
    </div>


    <div class="input">
        <label for="age">Age: </label>
        <input type="number" name="age" id="age" class="ageInput">
    </div>

    <div class="input phoneI">
        <label for="phone">Phone number:</label>
        <input id="phone" type="tel" name="phone" />
        <input type="button" id="verification" value="Verify" />
    </div>

    <div class="input field phoneI">
        <label for="avatar">Select avatar:</label>
        <input type="file" name="avatar" id="avatarInput" accept=".jpg,.png,.jpeg">
    </div>

    <button type="submit" class="btn">Register</button>

    <p class="registration">Do you have an account?<a href="/login">Log in!</a></p>
</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.16/js/intlTelInput.min.js"></script>
<script src="/static/js/phone.js"></script>