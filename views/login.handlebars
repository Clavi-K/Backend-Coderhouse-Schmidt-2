<link rel="stylesheet" href="/static/css/login.css">

<form action="/login" method="POST">

    <h1>Log in</h1>

    {{> error }}

    <div class="inputs">

        <div class="input">
            <label for="email">Email: </label>
            <input type="email" name="email" id="email" class="emailInput" >
        </div>

        <div class="input">
            <label for="password">Password: </label>
            <input type="password" name="password" id="password" class="passwordInput" >
        </div>

    </div>

    <button type="submit" class="btn">Log in</button>

    <p class="registration">No account? <a href="/register">Register now!</a></p>
</form>